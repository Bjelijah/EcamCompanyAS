    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="vertical"
          >
<FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" >
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="right|center_vertical"
	            android:layout_gravity="right|center_vertical"
	             >
	            <TextView
	                android:id="@+id/check_device_error_count"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:textColor="@color/check_device_error_color"
	                android:layout_marginRight="5dip" />
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:src="@mipmap/qz_icon_forward_normal"
		            android:layout_gravity="right|center_vertical"
		            android:layout_marginRight="10dip" />
	        </LinearLayout>
	        <LinearLayout
	            android:id="@+id/ll_error"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical" >
	
	            <ImageView
	                android:layout_width="38dip"
	                android:layout_height="38dip"
	                android:layout_marginLeft="10dip"
	                android:src="@mipmap/error" />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:layout_marginLeft="20dip"
	                android:text="故障" />
	
	        </LinearLayout>
        </FrameLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dip"
            android:scaleType="fitXY"
            android:src="@mipmap/divide_heng" />
              
                <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" >
            <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="right|center_vertical"
	            android:layout_gravity="right|center_vertical"
	             >
                <TextView
                    android:id="@+id/check_device_warning_count"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:textColor="@color/check_device_waring_color"
	                android:layout_marginRight="5dip" />
		        <ImageView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginRight="10dip"
		            android:src="@mipmap/qz_icon_forward_normal" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/ll_alarm"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center_vertical"
	            android:gravity="center_vertical"
	             >
	
	            <ImageView
	                android:layout_width="38dip"
	                android:layout_height="38dip"
	                android:layout_marginLeft="10dip"
	                android:src="@mipmap/warning" />
	
	            <TextView
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textSize="18sp"
	                android:layout_marginLeft="20dip"
	                android:text="警告" />
	            
	        </LinearLayout>
		</FrameLayout>
        
    </LinearLayout>

</LinearLayout>
