<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fl_device_manager_item"
        >
        
        <LinearLayout 
            android:baselineAligned="false"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:gravity="center_vertical">

		    <LinearLayout 
		        android:id="@+id/ll_device_manager_play_btn"
		        android:layout_weight="1"
			    android:layout_width="fill_parent" 
			    android:layout_height="wrap_content" >
			    <TextView
				    android:gravity="center_vertical"
				    android:id="@+id/tv_device_manager_item_name"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:textColor="@color/black"
				    android:layout_marginLeft="10dip"
				    android:layout_marginRight="10dip"
				    android:layout_marginTop="10dip"
				    android:layout_marginBottom="10dip"
				    android:textSize="20sp" />
			</LinearLayout>
		        
			<LinearLayout 
				android:layout_weight="5"
			    android:gravity="right"
			    android:layout_width="fill_parent" 
			    android:layout_height="fill_parent" >
			    <ImageButton
			        android:id="@+id/btn_device_manager_show_all_btns"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:gravity="center_vertical"
			        android:background="@color/transparent"
			        android:src="@mipmap/icon_btn_more" />
			</LinearLayout>
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/layout_device_manager_btns"
		    android:baselineAligned="false"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	         >
	        <LinearLayout
	            android:id="@+id/btn_device_manager_btn_1"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1.0"
	            android:gravity="center"
	            android:background="@drawable/video_source_btn_selector"
	            android:orientation="vertical" >
		        <ImageButton
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@color/transparent"
		            android:src="@mipmap/icon_set_notification" />
	        </LinearLayout>
	        
	        <LinearLayout
	            android:id="@+id/btn_device_manager_btn_2"
	            android:layout_width="wrap_content"
	            android:layout_height="match_parent"
	            android:layout_weight="1.0"
	            android:gravity="center"
	            android:background="@drawable/video_source_btn_selector"
	            android:orientation="vertical" >
		        <ImageButton
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@color/transparent"
		            android:src="@mipmap/icon_settings" />
			</LinearLayout>
			
	    </LinearLayout>
    </FrameLayout>

</LinearLayout>
